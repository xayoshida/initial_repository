{% extends 'base2.html.twig' %}


{% block body %}
    <style>
        input {
            margin-left:70px;
            width:700px;
            height:30px;
            line-height:20px;
            border:3px solid lightgray;
            border-radius:3px;
            margin-top:50px;
            padding-left:15px;
            font-size:15px;
        }
        ::placeholder {
            color:lightgray;
        }

        .box {
             width:800px;
             margin-left:70px;
             margin-bottom:50px;
         }
        h2 {
            color:lightseagreen;
            margin-bottom:0;
        }
        h2:hover {
            cursor:pointer;
            text-decoration:underline;
        }
        p {
            display:inline-block;
            color:darkgray;
        }
    </style>
    <div class="search">
        <form action="/blog/search/result" method="post">
            <input type="text" name="search_article" placeholder="検索する...">
        </form>
    </div>
    {% for item in result %}
        <div class="box">
            <a href="http://127.0.0.1:8000/blog/posts/{{ result.id }}"><h2>{{ title }}</h2></a>
            <p><i class="fas fa-calendar-alt"></i>{{ result.date }}</p>
            <p><i class="fas fa-user"></i>{{ result.author }}</p>
            <div class="content">{{ result.content }}</div>
        </div>
    {% endfor %}
{% endblock %}