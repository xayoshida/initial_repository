{% extends 'base.html.twig' %}
{% import 'macro.html.twig' as m %}

{% block page %}{{ title }}{% endblock %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h2>Person Table</h2>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Mail</th>
            <th>Age</th>
        </tr>
        {% for item in data %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.mail }}</td>
                <td>{{ item.age }}</td>
            </tr>
        {% endfor %}
    </table>
    {% include '/hello/form.html.twig' %}
{% endblock %}